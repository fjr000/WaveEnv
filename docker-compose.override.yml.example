# Docker Compose 覆盖配置示例
# 复制此文件为 docker-compose.override.yml 以启用开发模式或其他自定义配置
# docker-compose 会自动读取 docker-compose.override.yml（如果存在）

version: '3.8'

services:
  backend:
    volumes:
      # 开发模式：挂载代码目录，支持热重载
      - ./backend:/app
    # 启用调试模式（如果需要）
    # command: ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

  frontend:
    volumes:
      # 开发模式：挂载代码目录，支持热重载
      - ./frontend:/app
    # 启用调试模式（如果需要）
    # environment:
    #   - STREAMLIT_SERVER_RUN_ON_SAVE=true

